<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.admin.pium.mapper.ScheduleMapper">

    <resultMap id="ScheduleResultMap" type="com.admin.pium.entity.Schedule">
        <id property="id" column="id"/>
        <result property="scheduleDate" column="schedule_date"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insert" parameterType="com.admin.pium.entity.Schedule" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO schedules (schedule_date, title, description)
        VALUES (#{scheduleDate}, #{title}, #{description})
    </insert>

    <update id="update" parameterType="com.admin.pium.entity.Schedule">
        UPDATE schedules
        SET schedule_date = #{scheduleDate},
            title = #{title},
            description = #{description},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM schedules WHERE id = #{id}
    </delete>

    <select id="findById" resultMap="ScheduleResultMap">
        SELECT * FROM schedules WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="ScheduleResultMap">
        SELECT * FROM schedules ORDER BY schedule_date DESC
    </select>

    <select id="findByScheduleDate" resultMap="ScheduleResultMap">
        SELECT * FROM schedules WHERE schedule_date = #{scheduleDate} ORDER BY created_at
    </select>

    <select id="findByDateRange" resultMap="ScheduleResultMap">
        SELECT * FROM schedules 
        WHERE schedule_date BETWEEN #{startDate} AND #{endDate}
        ORDER BY schedule_date
    </select>

</mapper>
